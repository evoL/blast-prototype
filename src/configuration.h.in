#define PROJECT_ROOT "@PROJECT_SOURCE_DIR@"

#include <string>
#include <cstring>

std::string projectPath(const char* filename) {
    std::string str = PROJECT_ROOT;
    str += "/";
    str += filename;
    
    return str;
